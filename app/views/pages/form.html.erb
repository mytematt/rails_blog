<% word = @page.id ? 'Edit' : 'Create' %>
<h1><%= word %> a Page</h1>
<%= form_for @page do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :author %>
  <%= f.text_field :author %>
  <br />
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.submit %>
  <% end %>

  <p>
  <%= link_to 'Home Page', root_path %>
</p>
